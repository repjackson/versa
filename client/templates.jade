head
    title VersaClimber
    meta(name='viewport', content='user-scalable=no, initial-scale=1.0, maximum-scale=1.0, width=device-width')
    meta(name='apple-mobile-web-app-capable', content='yes')
    meta(name='apple-mobile-web-app-status-bar-style', content='black')
    link(rel="apple-touch-icon", sizes="120x120", href="/apple-touch-icon.png")
    link(rel="icon", type="image/png", href="/favicon-32x32.png", sizes="32x32")
    link(rel="icon", type="image/png", href="/favicon-16x16.png", sizes="16x16")
    link(rel="manifest", href="/manifest.json")
    link(rel="mask-icon", href="/safari-pinned-tab.svg", color="#5bbad5")
    meta(name="theme-color", content="#ffffff")
    link(href='https://fonts.googleapis.com/css?family=Ubuntu', rel='stylesheet')


template(name='layout')
    .context.example
        +nav
        .ui.text.container.basic.inverted.segment
            +Template.dynamic template=sub_nav
            +Template.dynamic template=main


template(name='not_found')
    .ui.text.container
        .ui.center.aligned.header Not Found
        
        
template(name='home')
    .ui.basic.center.aligned.segment
        .ui.centered.large.image
            img(src='/HomeHero.jpg')
    .ui.center.aligned.header
        i.checkmark.box.icon
        |#{session_count} sessions
    .ui.center.aligned.header
        i.location.arrow.icon
        |#{feet_count} feet
    a.ui.huge.red.fluid.button(href='/climbers')
        |Record Workout
    a.ui.huge.basic.grey.fluid.button(href='/review_stats')
        |Review Stats
            
            
template(name='climbers')
    .ui.dividing.header Climbers
    .ui.divided.list
        each climbers
            .item 
                .content
                    .header #{name}
    .ui.dividing.header Admin
    #add_climber.ui.basic.inverted.button
        i.plus.icon
        |Add Climber
            
                
template(name='about')
    .ui.centered.image
        img(src='/versafull.png')
    .ui.center.aligned.header
        i.copyright.icon
        |2017 by Heart Rate, Inc., All Rights Reserved. Version 0.3.9.14
        .ui.relaxed.list
            a.item(href='www.versaclimber.com')
                |Versaclimber Website
            a.item(href='www.versaclimber.com')
                |Privacy Policy
            a.item(href='www.versaclimber.com')
                |Store
                
template(name='profile_nav')
    .ui.two.item.inverted.menu
        a.red.item(href='/profile/my_info' class="{{isActivePath '/profile/my_info'}}")
            |My Info
        a.red.item(href='/profile/devices' class="{{isActivePath '/profile/devices'}}")
            |Devices